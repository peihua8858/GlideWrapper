<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.fz.imageload.widget.GlideImageView
            android:id="@+id/giv_image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:giv_error="@mipmap/ic_loading_fail"
            app:giv_height="90dp"
            app:giv_isCropCircle="true"
            app:giv_grayScale="true"
            app:giv_placeholder="@drawable/ic_android_placehold"
            app:giv_width="90dp" />

        <com.fz.imageload.widget.GlideImageView
            android:id="@+id/giv_image_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:giv_error="@mipmap/ic_loading_fail"
            app:giv_height="50dp"
            app:giv_grayScale="true"
            app:giv_placeholder="@drawable/ic_android_placehold"
            app:giv_rotateDegree="90"
            app:giv_width="50dp" />

        <com.fz.imageload.widget.GlideImageView
            android:id="@+id/giv_image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:giv_error="@mipmap/ic_loading_fail"
            app:giv_grayScale="true"
            app:giv_placeholder="@drawable/ic_android_placehold" />

        <com.fz.imageload.widget.GlideImageView
            android:id="@+id/giv_image_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:giv_error="@mipmap/ic_loading_fail"
            app:giv_isBlur="true"
            app:giv_grayScale="true"
            app:giv_placeholder="@drawable/ic_android_placehold" />

        <com.fz.imageload.widget.GlideImageView
            android:id="@+id/giv_image_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:giv_error="@mipmap/ic_loading_fail"
            app:giv_placeholder="@drawable/ic_android_placehold"
            app:giv_roundedMargin="3dp"
            app:giv_grayScale="true"
            app:giv_roundedRadius="15dp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>